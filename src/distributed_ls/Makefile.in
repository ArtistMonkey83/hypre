SHELL = /bin/sh

srcdir = @srcdir@
VPATH = @srcdir@

#These are the directories for the IJ interface
HYPRE_IJ_DIRS =\
 pilut\
 ParaSails\
 Euclid

all:
	@ \
	for i in ${HYPRE_IJ_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    echo "Making $$i ..."; \
	    (cd $$i; make install); \
	  fi; \
	done

install: all

clean:
	@ \
	for i in ${HYPRE_IJ_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; make clean); \
	  fi; \
	done

veryclean:
	@ \
	for i in ${HYPRE_IJ_DIRS}; \
	do \
	  if [ -d $$i ]; \
	  then \
	    (cd $$i; make veryclean); \
	  fi; \
	done

