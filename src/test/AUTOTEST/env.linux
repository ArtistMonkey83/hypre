PATH=/bin:/usr/bin:/usr/local/bin
if [ $# -ge 1 ]
then
  COMPILER=$1
fi
if [ -x "/bin/hostname" ] 
then
    HYPRE_HOST=`/bin/hostname`
fi
unset CC
unset CXX
unset F77
unset MPICH_CC
unset MPICH_CLINKER
unset MPICH_CCC
unset MPICH_CCLINKER
unset MPICH_F77
unset MPICH_FLINKER

#=============================================================================
# Based on what we found from system queries set HYPRE_ARCH
#=============================================================================

case "$HYPRE_HOST" in
   tux*)                   
     PATH=/bin:/usr/bin:/sbin:/usr/sbin:/usr/X11R6/bin:/usr/local/bin
     PARASOFT=/usr/apps/ParaSoft/insure++7.0.8
     export PARASOFT
     PATH=$PARASOFT/bin.linux2:$PATH
     PATH=/usr/apps/java/default/bin:$PATH
     PATH=/usr/apps/python/2.2.3/bin:$PATH
     LD_LIBRARY_PATH=/usr/apps/python/2.2.3/lib:$LD_LIBRARY_PATH
     PATH=/usr/apps/mpich/default/bin:$PATH
     LD_LIBRARY_PATH=/usr/apps/mpich/default/lib:$LD_LIBRARY_PATH
     PATH=/usr/apps/latex2html/default/bin:$PATH
     PATH=$PATH:/usr/apps/bin

     case $COMPILER in
       default)
         ;;
       gcc*)
         PATH=/usr/apps/bin:$PATH 
         LD_LIBRARY_PATH=/usr/apps/gcc/default/lib:$LD_LIBRARY_PATH
         export MPICH_CC=gcc
         export MPICH_CLINKER=gcc
         export MPICH_CCC=g++
         export MPICH_CCLINKER=g++
         export MPICH_F77=g77
         export MPICH_FLINKER=g77
         ;;
       pgi)
         export PGI=/usr/apps/pgi/default
         PATH=$PGI/linux86/5.1/bin:$PATH
         LD_LIBRARY_PATH=$PGI/linux86/5.1/lib:$LD_LIBRARY_PATH
         export MPICH_CC=pgcc
         export MPICH_CLINKER=pgcc
         export MPICH_CCC=pgCC
         export MPICH_CCLINKER=pgCC
         export MPICH_F77=pgf77
         export MPICH_FLINKER=pgf77
         ;;
       absoft)
         export ABSOFT=/usr/apps/Absoft/pro8.0
         PATH=$ABSOFT/bin:$PATH
         LD_LIBRARY_PATH=$ABSOFT/lib:${LD_LIBRARY_PATH}
         export MPICH_CC=gcc
         export MPICH_CLINKER=gcc
         export MPICH_CCC=g++
         export MPICH_CCLINKER=g++
         export MPICH_F77=f90
         export MPICH_FLINKER=f90
         ;;
       lahey)
         export LAHEY=/usr/apps/Lahey/lf9562
         PATH=$LAHEY/bin:$PATH
         LD_LIBRARY_PATH=$LAHEY/lib:${LD_LIBRARY_PATH}
         export MPICH_CC=gcc
         export MPICH_CLINKER=gcc
         export MPICH_CCC=g++
         export MPICH_CCLINKER=g++
         export MPICH_F77=f95
         export MPICH_FLINKER=f95
         ;;
       intel)
         PATH=/usr/apps/intel/compiler70/ia32/bin:$PATH
         LD_LIBRARY_PATH=/usr/apps/intel/compiler70/ia32/lib:$LD_LIBRARY_PATH
         export MPICH_CC=icc
         export MPICH_CLINKER=icc
         export MPICH_CCC=icc
         export MPICH_CCLINKER=icc
         export MPICH_F77=ifc
         export MPICH_FLINKER=ifc
         ;;
       kai)
         PATH=/usr/apps/KAI/default/KCC_BASE/bin:$PATH
         LD_LIBRARY_PATH=/usr/apps/KAI/default/KCC_BASE/lib:$LD_LIBRARY_PATH
         export MPICH_CC=KCC
         export MPICH_CLINKER=KCC
         export MPICH_CCC=KCC
         export MPICH_CCLINKER=KCC
         export MPICH_F77=g77
         export MPICH_FLINKER=g77
         ;;
       *)
         PATH=/usr/apps/bin:$PATH
         ;;
     esac
     ;;
   alc*|pengra*|mcr*)
            PATH=/usr/local/KAI/KCC_BASE/bin:$PATH
            PATH=/usr/local/mpi/bin:/opt/intel/compiler90/bin:$PATH
            LD_LIBRARY_PATH=/opt/intel/compiler90/lib:$LD_LIBRARY_PATH
            LM_LICENSE_FILE="/usr/local/etc/license.client"
            export LM_LICENSE_FILE
            ;;
   *)
            ;;
esac

export PATH
export LD_LIBRARY_PATH
DISPLAY=`/bin/hostname`:0.0
export DISPLAY
if [ -d linear_solvers/babel-runtime ] ; then
  if [ -z "$CLASSPATH" -o "$CLASSPATH" = "" ] ; then
    CLASSPATH=`pwd`/linear_solvers/babel-runtime
  else
    CLASSPATH=$CLASSPATH:`pwd`/linear_solvers/babel-runtime
  fi
  export CLASSPATH
fi
